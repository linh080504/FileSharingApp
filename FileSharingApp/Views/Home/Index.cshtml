@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center mt-5">
    <h1 class="display-4 text-primary">Welcome to File Sharing App!</h1>
    <p class="lead">Learn about <a href="https://learn.microsoft.com/aspnet/core" class="text-secondary">building Web apps with ASP.NET Core</a>.</p>

    <div class="mt-4">
        <h3 class="text-success">File Sharing Features</h3>
        <ul class="list-group">
            <li class="list-group-item">
                <a href="@Url.Action("Upload", "File")" class="btn btn-primary btn-lg btn-block">Upload File</a>
            </li>
            <li class="list-group-item">
                <a href="@Url.Action("FileList", "File")" class="btn btn-success btn-lg btn-block">View Files</a>
            </li>
        </ul>
    </div>
</div>

<style>
    body {
        background-color: #f8f9fa;
    }
    h1, h3 {
        margin-top: 20px;
        margin-bottom: 20px;
    }
</style>
